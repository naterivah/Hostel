        <link rel="apple-touch-icon-precomposed" href="{{asset('img/apple-touch-icon-57-precomposed.png')}}">
        <link rel="shortcut icon" href="{{asset('img/assets/ico/favicon.png')}}">
    </head>
    {% endblock %}
    <body>
                                                               {#Modal réservation #}
            <div class="modal fade" id="modal_resa">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h3>Résérvation</h3>
                </div>
                <div class="modal-body">
                    <p>Réservation effectuée avec succès.</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Fermer</button>             
                </div>   
            </div>
      {% block navbar  %}
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="brand"  href="{{path('hotel_accueil')}}"> Projet Internet/Intranet</a>
                        <div class="nav-collapse collapse">
                        {#FOFM Connexion #}
                         {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <ul class="nav nav-pills pull-right">
                                    <li class="active"> <a href="{{path("fos_user_profile_show")}}"><i class="icon-user icon-white"></i>{{'layout.logged_in_as'|trans({'%username%': app.user.username},'FOSUserBundle')}}</a></li>
                                    <li class="divider-vertical"></li>
                                    <li><a href="{{path("fos_user_security_logout")}}"><i class="icon-off icon-white"></i>{{'layout.logout'|trans([],'FOSUserBundle')}}</a></li>
                                </ul>
                         {% else %}
                            {% render(path("fos_user_security_login")) %}
                         {% endif %}
                                <ul class="nav">
                                    <li class="divider-vertical"></li>
                                    <li><a href="{{path('hotel_accueil', {'_locale':'en'})}}"><i class="icon-globe icon-white"></i>English</a></li>
                                    <li class="divider-vertical"></li>
                                    <li><a href="{{path('hotel_accueil', {'_locale':'fr'})}}"><i class="icon-map-marker icon-white"></i>Français</a></li>
                                      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") == false %}
                                    <li class="divider-vertical"></li>
                                    <li>

                                        <a href="{{path("fos_user_registration_register")}}"><i class="icon-hand-right icon-white"></i>{{'layout.register'|trans([],'FOSUserBundle')}}</a>

                                    </li>
                                    {% endif %}

                                </ul>
                            </div><!--/.nav-collapse -->
                        </div>
                    </div>
                </div>
     {% endblock %}



                <div class="container-fluid">
                    <div class="row-fluid">


                        <div class="span2">
                                                                         {% if is_granted('ROLE_CLIENT') %}






                                <div id="bar" class="well sidebar-nav">
                                    <ul class="nav nav-list">
                                        <li class="nav-header">Réservation</li>

                                        <form class="form-vertical" id="nouv_res" action= "{{path('hotel_reservation_nouveau') }}" method = "post">   

                                            <li> <input type="text" name="arrivee" id="arrivee" data-date-format="dd-mm-yyyy" required="true" placeholder="Date d'arrivée"></li>
                                            <li><input type="text" name ="depart" id="depart"   data-date-format="dd-mm-yyyy" required="true" placeholder="Date de départ"></li>

                                            <li><input name="litbebe" id="litbebe"  type="number" min= "0" required="true" placeholder="Nombre de lits bébés"></li>
                                            <li>
                                                <a href="#modal_resa" role="button" class="btn" data-toggle="modal">Launch demo modal</a>


                                            </li>


                                            <li><button type="submit" id="sub" class="btn btn-success">Rechercher<i class="icon-chevron-right icon-white"></i></button></li>


                                        </form>
                                        <li><img id="loading" src="{{asset('img/ajax-loader.gif')}}"></li>
                                        <li><div class="control-group" id="show_select">
                                                <label class="control-label badge badge-info" for="chambres">{{'chambre.label'|trans }}</label>
                                                <div class="controls">

                                                    <select name ="chambres[]" id="chambres" multiple="multiple">

                                                    </select>
                                                </div>
                                            </div> </li>
                                        <li>
                                            <div class="btn-group" id="show_button"> 
                                                <button class="btn btn-inverse" id="confirm">Confirmer</button> 

                                                <button class="btn btn-danger" id="cancel">Annuler</button> 
                                            </div> 
                                        </li>



                                    </ul>

                                </div><!--/.well -->
                                                    {%  endif %}









                                <div class="well sidebar-nav">

                                    <ul class="nav nav-list">

                                        <li class="nav-header">{%block titremenu%}Menu{%endblock%}</li>


                             {% block menu %}
                            {% endblock %}
                                    </ul>

                                </div><!--/.well -->
                            </div><!--/span-->

