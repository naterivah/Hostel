{% endstylesheets %}
    <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }


            input {
                width: 90%;

            } 
            select{
                width: 95%;
            }


            .sidebar-nav {
                padding: 9px 0;

            }
            #loading{
                margin-left:3em;
                }
            @media (max-width: 980px) {

                .navbar-text.pull-right {
                    float: none;
                    padding-left: 5px;
                    padding-right: 5px;
                }
            }
        </style>
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" type="text/css" />

