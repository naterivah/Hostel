{% extends '::layout.html.twig' %}
{% block title %}
{{ "tarif.liste"|trans }}
{% endblock %}


{% block content %}
    {% for flashMessage in app.session.flashbag.get('message') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
{% endfor %}
    <table border="1">
        <caption>{{ "tarif.liste"|trans|upper }}</caption>

        <tr>
            <th>ID</th>
            <th>{{ "tarif.couleur"|trans }}</th>
            <th>{{ "tarif.bebe"|trans }}</th>
                                                         {% if is_granted('ROLE_EMPLOYE') %}

            <th colspan="2">Options</th>
                                {% endif %}

        </tr>
            {% for tar in tarifs %}
        <tr>
            <td>{{tar.id}}</td>
            <td>{{tar.couleur}}</td>
            <td>{{tar.prixlitbebe}}</td>
                                                         {% if is_granted('ROLE_EMPLOYE') %}

            <td>    <p><a href=" {{path('hotel_tarif_editer',{'id' : tar.id})}}">{{"modifier"|trans}}</a></p></td>
            
           <td>    <p><a href=" {{path('hotel_tarif_supprimer',{'id' : tar.id})}}">{{"supprimer"|trans}}</a></p></td>
                    {% endif %}

        </tr>
    {% else %}
        <tr>
            <td colspan="5" style="background-color:#FF0000">{{"tarif.aucun" |trans}}</td>

        </tr>
        {% endfor %}
    </table>
                                             {% if is_granted('ROLE_EMPLOYE') %}

    <p><a href=" {{path('hotel_tarif_ajouter')}}">{{"tarif.ajouter"|trans}}</a></p>
                        {% endif %}

{% endblock %}